<Application x:Class="Cryptocurrencies.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Cryptocurrencies"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="WrapPanel">
            <Setter Property="ItemWidth" Value="150"></Setter>
            <Setter Property="MaxWidth" Value="150"></Setter>
            <Setter Property="Background" Value="#1234"></Setter>
            <Setter Property="ItemHeight" Value="30"></Setter>
            <Setter Property="Margin" Value="3"></Setter>
        </Style>
        <Style TargetType="Menu">
            <Setter Property="Background" Value="#1234"></Setter>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="#1234"></Setter>
        </Style>
    </Application.Resources>
</Application>
